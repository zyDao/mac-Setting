set number
set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch
set guioptions=r
set laststatus=0 
set clipboard=unnamed
imap jj <ESC>
nmap <up> <space>
nmap <down> <space>
nmap <left> <space>
nmap <right> <space>
nmap <tab> %
vnoremap <tab> %
vmap <space>y "+y
nmap <space>y "+y
vmap <space>Y "+Y
nmap <space>Y "+Y
vmap <space>d "+d
nmap <space>p "+p
nmap <space>P "+P
vmap <space>p "+p
vmap <space>P "+P
map <C-j> 3jzz
map <C-k> 3kzz
map <C-n> :nohl<cr>
